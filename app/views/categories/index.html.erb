<div class="col-md-12">
  <p id="notice"><%= notice %></p>

  <h3>Listing of all Categories</h3><br>

  <div class="table-responsive">
    <table class="table table-condensed table-bordered table-hover">
      <thead>
        <tr>
          <th>Category title</th>
          <th>Category image</th>
          <th colspan="3">Category actions</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= image_tag(category.image_url, width: 100) if category.image.present? %></td>
            <td><%= link_to 'Show', category, class: 'btn btn-outline-info'  %></td>
            <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-warning'  %></td>
            <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger'  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Make a new Category', new_category_path, class: 'btn btn-outline-primary' %>
    <br>
    <br>
    
  </div>
</div>
