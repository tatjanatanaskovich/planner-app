<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter a title for your Task' %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, class: 'form-control', placeholder: 'Enter a description for your Task' %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.datetime_select :start_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :due_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.datetime_select :due_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :completed, class: "col-sm-2 control-label" %>
  
      <%= form.check_box :completed %>
    
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
